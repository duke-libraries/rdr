{
    "name" : "repo",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : ["default"],
        "default" : "default",
        "allowCreation" : true
    },
    "storage" : {
        "persistence": {
            "type" : "db",
            "connectionUrl": "jdbc:postgresql://${fcrepo.db.host:fcrepo_db}:${fcrepo.db.port:5432}/${fcrepo.db.name:fcrepo}",
            "driver" : "org.postgresql.Driver",
            "username" : "${fcrepo.db.user:fcrepo}",
            "password" : "fcrepo"
        },
        "binaryStorage" : {
            "type" : "file",
            "directory" : "${fcrepo.binary.directory:target/binaries}",
            "minimumBinarySizeInBytes" : 4096
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "org.fcrepo.auth.common.BypassSecurityServletAuthenticationProvider" }
        ]
    },
    "node-types" : ["fedora-node-types.cnd"]
}
